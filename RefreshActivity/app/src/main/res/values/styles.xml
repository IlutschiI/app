<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle" tools:targetApi="8" >@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">#42A5F5</item>



        <!-- Support library compatibility -->
        <item name="background">@color/MyBlue</item>
    </style>

    <style name="MyActionBar2.2"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item tools:targetApi="11" name="android:background" >@android:color/black</item>
    </style>



</resources>
