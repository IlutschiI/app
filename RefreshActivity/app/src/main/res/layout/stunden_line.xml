                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_mitRaum"
                android:layout_marginLeft="2dp"
                android:text="Raum" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
